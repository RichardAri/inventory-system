  <style>
    .footer {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background-color: #111;
      color: white;
      text-align: center;
      padding: 1rem;
      font-size: 14px;
    }
  
    .footer-content {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
  
    .footer p {
      margin: 0;
    }
  
    .social-icons {
      margin-top: 0.5rem;
    }
  
    .social-icons a {
      margin: 0 10px;
      color: white;
      text-decoration: none;
    }
  
    .social-icons svg {
      transition: transform 0.2s ease;
    }
  
    .social-icons a:hover svg {
      transform: scale(1.2);
    }
  </style>
  